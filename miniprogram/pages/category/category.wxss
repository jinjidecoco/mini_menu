/* category.wxss */

/* 容器 */
.container {
  padding: 0 0 30rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
}

/* 分类导航 */
.category-nav {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: rgba(255, 255, 255, 0.95);
  white-space: nowrap;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 40rpx;
  transition: all 0.3s ease;
}

.category-item.active {
  position: relative;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 6rpx;
  background-color: #000;
  border-radius: 3rpx;
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
  overflow: hidden;
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

.category-item.active .category-name {
  font-weight: 500;
  color: #000;
}

/* 分类头部 */
.category-header {
  padding: 40rpx 30rpx;
}

.category-title {
  font-size: 44rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  color: #000;
}

.category-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 菜谱列表 */
.recipe-list {
  padding: 0 30rpx;
}

.recipe-item {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.recipe-cover {
  width: 220rpx;
  height: 220rpx;
  flex-shrink: 0;
}

.recipe-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: #000;
}

.recipe-meta {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: flex;
}

.recipe-difficulty {
  margin-right: 20rpx;
}

.recipe-tags {
  margin-top: auto;
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 22rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 100rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #000;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
  border-radius: 8px;
  overflow: hidden;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多和没有更多 */
.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #999;
}

/* 卡片样式 */
.card {
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.98);
  opacity: 0.9;
}