/* search.wxss */

/* 容器 */
.container {
  padding: 0 0 30rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input-wrap {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  position: relative;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  border-radius: 50%;
  overflow: hidden;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999;
}

.search-btn {
  padding: 0 20rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #000;
}

/* 搜索历史和热门搜索 */
.search-history, .hot-search {
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
}

.clear-history {
  font-size: 26rpx;
  color: #999;
}

.keyword-list {
  display: flex;
  flex-wrap: wrap;
}

.keyword-item {
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 100rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #333;
}

/* 搜索结果 */
.result-header {
  padding: 30rpx 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
}

.result-count {
  font-size: 26rpx;
  color: #999;
}

/* 菜谱列表 */
.recipe-list {
  padding: 0 30rpx;
}

.recipe-item {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.recipe-cover {
  width: 220rpx;
  height: 220rpx;
  flex-shrink: 0;
}

.recipe-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: #000;
}

.recipe-meta {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: flex;
}

.recipe-difficulty {
  margin-right: 20rpx;
}

.recipe-tags {
  margin-top: auto;
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 22rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 100rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #000;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

/* 空结果 */
.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
  border-radius: 8px;
  overflow: hidden;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多和没有更多 */
.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #999;
}

/* 卡片样式 */
.card {
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.98);
  opacity: 0.9;
}