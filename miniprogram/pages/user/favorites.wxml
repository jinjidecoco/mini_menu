<view class="container">
  <!-- 加载中状态 -->
  <view class="loading-container" wx:if="{{loading}}">
    <view class="loading"></view>
    <text>加载中...</text>
  </view>

  <!-- 空状态 -->
  <view class="empty-container" wx:elif="{{empty}}">
    <image class="empty-icon" src="/images/empty-favorites.png" mode="aspectFit"></image>
    <text class="empty-text">暂无收藏的菜谱</text>
    <navigator url="/pages/index/index" open-type="switchTab" class="empty-action">去首页发现美食</navigator>
  </view>

  <!-- 收藏列表 -->
  <view class="favorites-list" wx:else>
    <view class="recipe-item" wx:for="{{favorites}}" wx:key="id" bindtap="goToDetail" data-id="{{item.id}}">
      <image class="recipe-image" src="{{item.image}}" mode="aspectFill" lazy-load></image>
      <view class="recipe-info">
        <text class="recipe-name">{{item.name}}</text>
        <text class="recipe-desc">{{item.description}}</text>
        <view class="recipe-meta">
          <text class="recipe-difficulty">难度：{{item.difficulty}}</text>
          <text class="recipe-time">时间：{{item.cookTime}}分钟</text>
        </view>
      </view>
      <view class="cancel-btn" catchtap="cancelFavorite" data-id="{{item.id}}" data-index="{{index}}">
        <image src="/images/icons/delete.png"></image>
      </view>
    </view>
  </view>
</view>