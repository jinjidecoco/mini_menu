.container {
  padding: 0;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info-section {
  background-color: #ffffff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.default-avatar, .user-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background-color: #f0f0f0;
}

.login-btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  background-color: #000000;
  color: #ffffff;
  margin-top: 20rpx;
  font-weight: normal;
}

.username {
  font-size: 32rpx;
  color: #333333;
  margin-top: 10rpx;
}

/* 功能列表 */
.function-list {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.function-icon image {
  width: 100%;
  height: 100%;
}

.function-name {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

.arrow {
  width: 30rpx;
  height: 30rpx;
}

.arrow image {
  width: 100%;
  height: 100%;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 0;
}

.version-info text {
  font-size: 24rpx;
  color: #999999;
}